<%- include("partials/header") %>
<link  type="text/css" rel="stylesheets" href="\public\app.css" >

<div class="newcontainer">EDIT <%= blog.title %></div>
<form style="text-align: center;background-color: bisque"; action = "/blogs/<%= blog._id%>?_method=PUT" method="POST" >
   
  <div class="form-group">

    <div class="form-group" >
       <label class="col-sm-2 col-form-label">Title    <label>
       <input class="form-control" type="text" name ="blog[title]" value="<%= blog.title %>">
    </div>
    <div  class="form-group">
       <label class="col-sm-2 col-form-label">Image<label>
       <input class="form-control" type="text" name ="blog[image]" value="<%= blog.image %>">
    </div class="form-group">
    <div>
       <label class="col-sm-2 col-form-label">Blog Content</label>
    <div>
       <textarea name="blog[body]" class="form-control" aria-label="With textarea">"<%= blog.body %>"</textarea>
    </div>
    </div>
       <input class="btn btn-outline-primary" type= "submit">
    </div>
</form>



<%- include("partials/footer") %> 